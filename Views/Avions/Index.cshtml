@model IEnumerable<Asp.net_MVC_TP_6.Models.Avion>

@{
    ViewBag.Title = "Index";
}

<h2 style="text-align:center;">Liste Des Avion</h2>

<p>
    @Html.ActionLink("Ajout", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NomAv)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Capacite)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Localisation)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomAv)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Capacite)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Localisation)
            </td>
            <td>
                @Html.ActionLink("Modification", "Edit", new { id = item.NumAv }) |
                @Html.ActionLink("Details", "Details", new { id = item.NumAv }) |
                @Html.ActionLink("Supprission", "Delete", new { id = item.NumAv })
            </td>
        </tr>
    }

</table>
